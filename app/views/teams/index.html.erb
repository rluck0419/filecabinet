<h4 class="card-title">Teams</h4>
<%= link_to "Create Team", new_team_path, class: "waves-effect waves-light btn right" %>
<ol>
  <% teams.each do |team| %>
<div class="card team-file-card">
  <div class="card-content">
    <p>
      <%= link_to team.name.capitalize, team %>
      <% if team.members.count.zero? %>
        <%= " (No members)" %>
      <% else %>
        (<%= pluralize(team.members.count, 'member') %>)
      <% end %>
    </p>
  </div>
</div>
  <% end %>
</ol>
