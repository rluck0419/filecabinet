<div><h3><%= form_title %></h3></div>

<div>
  <%= form_for(note) do |f| %>
    <div>
      <label for="name">Name: </label>
      <%= f.text_area :name, placeholder: "meeting_notes_2016-08-04", class: 'form-field' %>
    </div>

    <div>
      <label for="body">Body: </label>
      <%= f.text_area :body, placeholder: "Today we started planning...", class: 'form-field' %>
    </div>

    <div>
      <label for="file_type">File Extension: </label>
      <%= f.select :file_type, options_for_select(["txt", "md"]) %>
    </div>

    <div>
      <label for="category_id">Category: </label>
      <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name) %>
    </div>

    <div>
      <label for="user_id">Author: </label>
      <%= f.select :user_id, options_from_collection_for_select(User.all, :id, :name) %>
    </div>

    <div>
      <label for="tags">Tags (comma-separated): </label>
      <%= fields_for :tags do |tag_fields| %>
        <%= tag_fields.text_field :name, value: note.tags.map(&:name).join(", ") %>
      <% end %>
    </div>

    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
