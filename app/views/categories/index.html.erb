<div> <%= link_to "Create Category", new_category_path, class: "btn" %> </div>

<% categories.each do |category| %>
  <div class="row">
    <div class="card file-card col m8 m2">
      <div class="card-content">
        <span class="card-title">Category:
        <% if [category.children, category.notes, category.photos].all?(&:empty?) %>
          <%= link_to category.name + " (No items)", category, class: "link-color" %>
        <% else %>
          <%= link_to category.name + " (#{item_count(category)})", category, class: "link-color" %>
        <% end %></span>
      </div>
    </div>
  </div>
<% end %>

<% if notes %>
  <% notes.each do |note| %>
    <p><%= link_to note.name, note %></p>
  <% end %>
<% end %>

<% if photos %>
  <% photos.each do |photo| %>
    <p><%= link_to photo.name, photo %></p>
  <% end %>
<% end %>
