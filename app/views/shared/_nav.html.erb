<header class="main-header">
  <nav>
    <div class="row">
      <div class="col s1 app-title">
        <p class="header-title"><h5>Teamshare</h5></p>
      </div>

      <div class="col s3 push-1 heading-block">
        <div class="col s3 heading">
          <%= link_to "Home", root_path %>
        </div>

        <div class="col s3 heading">
          <%= link_to "Users", users_path %>
        </div>

        <div class="col s3 heading">
          <%= link_to "Teams", teams_path %>
        </div>

        <div class="col s3 heading cat">
          <%= link_to "Categories", categories_path, id: "in-nav" %>
        </div>
      </div>

      <div class="col s6">
        <div class="nav-wrapper">
          <form>
            <div class="input-field col s4">

              <div class="search-box">

                <%= form_tag search_path do %>
                  <input id="search" type="search" class="search full-width" id="searchbar" name="query" type="text" remote=true>
                <% end %>

                <label for="search"><i class="material-icons">search</i></label>
                <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
              </div>


            </div>

            <div class="sign-in-out-up col s6 offset-s2">
              <% if signed_in? %>
                <div class="col s6 offset-s6 heading">
                  <%= link_to "Sign Out", sign_out_path, method: :delete %>
                </div>
              <% else %>
                <div class="col s6 heading">
                  <%= link_to "Sign In", sign_in_path %>
                </div>
                <div class="col s6 heading">
                  <%= link_to "Sign Up", sign_up_path %>
                </div>
              <% end %>
            </div>
          </form>
        </div>
      </div>

    </div>
  </nav>
</header>
